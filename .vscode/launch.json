    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\index.js",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start"]
        },
        {
            "name": "Launch Debugging",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\index.js",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["dev"]
        },
    ]
}
