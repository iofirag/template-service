{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es6"
      ],
      "types": [
        "reflect-metadata"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "resolveJsonModule": true
    },
    "hooks": [
      "copy-files"
    ],
    "include": [ "src/**/*" ],
    "exclude": [ "src/**/*.txt" ],
  }