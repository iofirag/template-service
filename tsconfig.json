{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "hooks": [
    "copy-files"
  ],
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}